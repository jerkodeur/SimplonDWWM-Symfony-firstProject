<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header {% block bgColor_header %} bg-danger {% endblock %}{% block textColor_header %} text-white {% endblock %}">
                <h5 class="modal-title" id="modalLabel">
                    {% block modal_title %}{% endblock %}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% block modal_body %}{% endblock %}
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn btn-secondary rounded" role="button" aria-pressed="true" data-bs-dismiss="modal">Annuler</a>
                {% block modal_button_2 %}{% endblock %}
            </div>
        </div>
    </div>
</div>

{% block javascript %}{% endblock %}
