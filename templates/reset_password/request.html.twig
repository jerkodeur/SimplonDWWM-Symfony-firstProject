{% extends 'clean.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}
{% block subTitle %}
    Veuillez renseigner votre adresse e-mail afin de pouvoir r√©initialiser votre mot de passe
{% endblock %}
{% block meta %}
<small class="text-warning">
    Vous recevrez un email contenant un lien afin de pouvoir modifier votre mot de passe
</small>
{% endblock %}
{% block bg %}
    https://f.hellowork.com/blogdumoderateur/2019/03/Mot-de-passe-securite-taiwan.jpg
{% endblock %}


{% block body %}
    <div class="container mt-2 w-25">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div class="mt-3 mb-5"><button class="btn btn-primary">M'envoyer le lien par mail</button></div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
